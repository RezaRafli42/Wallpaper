<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wallpaper.BackgroundColorActivity">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Background Color"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_wal1"
                        android:layout_width="100dp"
                        android:layout_margin="3dp"
                        android:layout_height="200dp"
                        android:background="@drawable/btn_1"/>

                    <Button
                        android:id="@+id/btn_wal2"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/btn_2"/>

                    <Button
                        android:id="@+id/btn_wal3"
                        android:layout_width="100dp"
                        android:layout_margin="3dp"
                        android:layout_height="200dp"
                        android:background="@drawable/btn_3"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_wal4"
                        android:layout_width="100dp"
                        android:layout_margin="3dp"
                        android:layout_height="200dp"
                        android:background="@drawable/btn_4"/>

                    <Button
                        android:id="@+id/btn_wal5"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/btn_5"/>

                    <Button
                        android:id="@+id/btn_wal6"
                        android:layout_width="100dp"
                        android:layout_margin="3dp"
                        android:layout_height="200dp"
                        android:background="@drawable/btn_6"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_wal7"
                        android:layout_width="100dp"
                        android:layout_margin="3dp"
                        android:layout_height="200dp"
                        android:background="@drawable/btn_7"/>

                    <Button
                        android:id="@+id/btn_wal8"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/btn_8"/>

                    <Button
                        android:id="@+id/btn_wal9"
                        android:layout_width="100dp"
                        android:layout_margin="3dp"
                        android:layout_height="200dp"
                        android:background="@drawable/btn_9"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


</RelativeLayout>